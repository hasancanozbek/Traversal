@using Traversal.Web.Areas.Admin.Models

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model AdminProfileModel

<h1>Profil Ayarları</h1>

<form asp-action="Index" asp-controller="AdminProfile" asp-area="Admin" method="post">
    <div class="form-group">
        <br />
        <div class="row">
            <br />
            <div class="col-md-4">
                <label>Email</label>
                <input asp-for="User.Email" placeholder="@Model.User.Email" readonly class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Telefon</label>
                <input asp-for="User.PhoneNumber" placeholder="@Model.User.PhoneNumber" readonly class="form-control" />
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-4">
            <label>Şifre</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <div class="col-md-4">
            <label>Şifreyi Onayla</label>
            <input asp-for="PasswordConfirm" type="password" class="form-control" />
        </div>
    </div>
    <div>
        <label>Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-primary">Değiştir</button>
    </div>
</form>