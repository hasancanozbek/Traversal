@using Traversal.Web.Areas.Admin.Models

@{
    ViewData["Title"] = "Tur Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model AdminAddTripModel

<h1>Yeni Tur Ekleme Sayfası</h1>
<form asp-action="Add" asp-controller="AdminTrips" asp-area="Admin" method="post">
    <div class="form-group">
        <br />
        <div class="row">
            <br />
            <div class="col-md-4">
                <label>Tur Başlığı</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Fiyat:</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Rehber Id:</label>
                <input asp-for="GuideId" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Toplam Gün:</label>
                <input asp-for="Day" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Html Content</label>
        <input asp-for="Content" class="form-control" />
    </div>
    <div class="form-group">
        <br />
        <button type="submit" id="tur-olustur" class="btn btn-primary">Turu Oluştur</button>
    </div>
</form>